@{
  Layout = "_Layout";
}

@model List<Treats.Models.Flavor>;

@using Treats.Models;

<h1>All Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added to the Database yet!</h3>
}
else
{
  @if (User.Identity.IsAuthenticated)
  {
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{Flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
    }

    <p>@Html.ActionLink("Add New Flavor", "Create")</p>
  }
  else
  {
    <li>@Html.ActionLink($"{Flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
  }
}