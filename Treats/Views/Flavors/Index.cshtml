@{
  Layout = "_Layout";
}

@model List<Treats.Models.Flavor>;

@using Treats.Models;

<h1>All Flavors</h1>

@if (Model.Count == 0)
{
  <h3>No Flavors have been added to the Database yet!</h3>

  @if (User.Identity.IsAuthenticated)
  {
    <p>@Html.ActionLink("Add a New Flavor", "Create")</p>
  }
}
else
{
  @if (User.Identity.IsAuthenticated)
  {
    <ul>
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
      }
    </ul>

    <p>@Html.ActionLink("Add a New Flavor", "Create")</p>
  }
  else
  {
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
    }
  }
}