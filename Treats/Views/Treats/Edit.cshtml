@{
  Layout = "_Layout";
}

@model Treats.Models.Treat

<h1>Edit Treat Info:</h1>

<h2>Edit Info for @Html.DisplayFor(model => model.TreatName)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.TreatName)
  @Html.EditorFor(model => model.TreatName)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Treat Details", "Details", new { id = Model.TreatId })</p>